def selection(arr):
    for i in range(len(arr)):
        index = i
        
        for j in range(i+1, len(arr)):
            if arr[j] < arr[index]:
                index = j
        
        arr[i], arr[index] = arr[index], arr[i]
        print(f"Step {i+1}: {arr}")

arr = [77, 9, 33, 5, 18]
selection(arr)
print("Sorted array:", arr)
